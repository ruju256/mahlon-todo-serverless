{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "todo",
    "type": "object",
    "properties": {
      "name": {
        "pattern": "^[a-zA-Z0-9]+$",
        "minLength": 3,
        "maxLength": 20 
        },
        "dueDate": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
      "done": {
        "type": "boolean"
      },
      "attachmentUrl": {
        "type": "string"
      }
    },
    "required": ["name", "dueDate", "done"],
    "additionalProperties": false
  }
  